{
  "ApiClients": {
    "ProductsServiceUrl": "http://localhost:8081",
    "CartServiceUrl": "http://localhost:8082",
    "OrdersServiceUrl": "http://localhost:8083",
    "CheckoutServiceUrl": "http://localhost:8084"
  },
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "Domain": "your-domain.onmicrosoft.com",
    "TenantId": "your-tenant-id-here",
    "ClientId": "your-client-id-here",
    "CallbackPath": "/signin-oidc",
    "SignedOutCallbackPath": "/signout-callback-oidc"
  },
  "AzureAI": {
    "Endpoint": "https://retail-app-foundry.cognitiveservices.azure.com/",
    "ProjectName": "retail-app-proj",
    "DeploymentName": "gpt-4o",
    "MaxTokens": 800,
    "Temperature": 0.7
  },
  "ApplicationInsights": {
    "ConnectionString": ""
  },
  "AzureSearch": {
    "Endpoint": "https://retail-ai-search-service.search.windows.net",
    "IndexName": "products-index",
    "EmbeddingDeploymentName": "text-embedding-3-small"
  },
  "DetailedErrors": true,
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Database=ApplicationDB;Integrated Security=true;TrustServerCertificate=True;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Identity": "Debug",
      "Azure.Core": "Information",
      "Azure.Identity": "Information",
      "RetailDecomposed.Services": "Debug"
    },
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "SingleLine": false,
        "IncludeScopes": true,
        "TimestampFormat": "HH:mm:ss ",
        "UseUtcTimestamp": false
      }
    }
  }
}
