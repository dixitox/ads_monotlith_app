<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RetailDecomposed</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/side-chat.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Styles", required: false)

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">RetailDecomposed</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Cart/Index">Cart</a>
                        </li>
                  

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Checkout/Index">Checkout</a>
                         </li>

                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Orders/Index">Orders</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Products/Index">Products</a>
                        </li>

                        <li class="nav-item">
                            <button class="nav-link text-dark btn btn-link" id="toggleSideChat" type="button">
                                <i class="bi bi-robot"></i> AI Assistant
                            </button>
                        </li>

                        <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Side Chat Panel -->
    <div id="sideChatPanel" class="side-chat-panel">
        <div class="side-chat-header">
            <h5 class="mb-0">
                <i class="bi bi-robot"></i> AI Shopping Assistant
            </h5>
            <div class="d-flex gap-2">
                <button id="pinSideChat" class="btn-pin-chat" aria-label="Pin" title="Pin chat (keeps open while browsing)">
                    <i class="bi bi-pin"></i>
                </button>
                <button id="closeSideChat" class="btn-close-chat" aria-label="Close">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
        </div>
        <div class="prompt-suggestions">
            <span class="prompt-chip" data-prompt="Show me Electronics under £50">
                <i class="bi bi-laptop"></i> Electronics under £50
            </span>
            <span class="prompt-chip" data-prompt="What Beauty products do you have?">
                <i class="bi bi-palette"></i> Beauty products
            </span>
            <span class="prompt-chip" data-prompt="Compare Apparel and Footwear items">
                <i class="bi bi-cart"></i> Compare categories
            </span>
            <span class="prompt-chip" data-prompt="Show all Home and Accessories items">
                <i class="bi bi-house"></i> Home & Accessories
            </span>
        </div>
        <div class="side-chat-body">
            <div id="sideChatContainer" class="side-chat-messages">
                <!-- Welcome message -->
                <div class="chat-message assistant-message">
                    <div class="message-avatar">
                        <i class="bi bi-robot"></i>
                    </div>
                    <div class="message-bubble">
                        👋 Hello! I'm your AI shopping assistant. I can help you find products and answer questions about our catalog.
                        <br><br>
                        Try clicking a suggestion above or ask me anything!
                    </div>
                </div>
            </div>
        </div>
        <div class="token-counter" id="tokenCounter">
            <span class="tokens">0</span> tokens used this session
        </div>
        <div class="side-chat-footer">
            <div class="chat-controls">
                <button id="clearChatBtn" class="btn-clear-chat">
                    <i class="bi bi-trash"></i> Clear Chat
                </button>
                <small class="text-muted">📌 Pinned chats stay open</small>
            </div>
            <div class="input-area">
                <form id="sideChatForm" class="side-chat-input-form">
                <input 
                    type="text" 
                    id="sideChatInput" 
                    class="form-control" 
                    placeholder="Ask me anything..." 
                    autocomplete="off"
                    required>
                <button type="submit" class="btn btn-primary" id="sideChatSend">
                    <i class="bi bi-send-fill"></i>
                </button>
            </form>
            </div>
        </div>
    </div>
    <div id="sideChatOverlay" class="side-chat-overlay"></div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - RetailDecomposed - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/side-chat.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>