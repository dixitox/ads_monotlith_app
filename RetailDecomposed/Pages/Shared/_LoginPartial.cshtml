@using System.Security.Claims
@if (User.Identity?.IsAuthenticated == true)
{
    <ul class="navbar-nav">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-dark" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-person-circle"></i> @User.Identity.Name
                @if (User.IsInRole("Admin"))
                {
                    <span class="badge bg-primary">Admin</span>
                }
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                <li><a class="dropdown-item" asp-area="" asp-page="/UserInfo"><i class="bi bi-info-circle"></i> User Info</a></li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    @if (User.HasClaim(c => c.Type == "http://schemas.microsoft.com/identity/claims/tenantid"))
                    {
                        <a class="dropdown-item" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut" asp-route-scheme="OpenIdConnect"><i class="bi bi-box-arrow-right"></i> Sign out</a>
                    }
                    else
                    {
                        <a class="dropdown-item" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut"><i class="bi bi-box-arrow-right"></i> Sign out</a>
                    }
                </li>
            </ul>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn">Sign in</a>
        </li>
    </ul>
}
